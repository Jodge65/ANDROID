<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout="@+id/parameter"
        android:text="@string/title"
        android:textSize="@dimen/title" />

    <ImageView
        android:id="@+id/separation10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"
        android:src="@color/separator" />

    <LinearLayout
        android:id="@+id/reglageSonRubrique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reglageSon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@+id/parameter"
            android:text="@string/reglageSon"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/subtitleSon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitleSon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/separator5dp_2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"
        android:src="@color/separator" />

    <LinearLayout
        android:id="@+id/reglageEcranRubrique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reglageEcran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@+id/parameter"
            android:text="@string/reglageEcran"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/subtitleEcran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portrait" />

        <TextView
            android:id="@+id/subtitleEcranBis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitleTwoEcran" />

    </LinearLayout>

    <ImageView
        android:id="@+id/separator5dp_3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"
        android:src="@color/separator" />

    <LinearLayout
        android:id="@+id/reglageVeilleRubrique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/reglageVeille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@+id/parameter"
            android:text="@string/reglageVeille"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/subtitleVeille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitleVeille" />
    </LinearLayout>

    <ImageView
        android:id="@+id/separator5dp_4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"
        android:src="@color/separator" />

</LinearLayout>